<div class="row">
  <div class="col-xs-7 col-xs-offset-3 col-md-4 col-md-offset-4">
    <%= devise_error_messages %>
    <div class="sign_up">
      <h2>新規会員登録</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <table border="0">
      <tr style="height:50px">
        <th style="min-width:200px;">名前</th>
        <td>
          <% f.label :name %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", style: "width:310px;",placeholder: "10文字以内" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>ニックネーム</th>
        <td>
          <% f.label :nickname %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control",placeholder: "10文字以内" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>自己紹介</th>
        <td>
          <% f.label :introduction %>
          <%= f.text_field :introduction, autofocus: true, autocomplete: "introduction", class: "form-control",placeholder: "160文字以内" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>メールアドレス</th>
        <td>
          <% f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>パスワード</th>
        <td>
          <% f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>パスワード確認</th>
        <td>
          <% f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </td>
      </tr>

      <tr style="height:50px">
        <th>プロフィール画像選択</th>
        <td>
          <% f.label :profile_image %>
          <%= f.attachment_field :profile_image %>
        </td>
      </tr>

    </table>
    <div class="actions">
      <%= f.submit "新規登録", class:"btn btn-success", style:"margin-left:280px; width:150px" %>
    </div>

    <% end %>


    <div class="sign_in_page">
      <h4>既に登録済みの方</h4>
      <%- if controller_name != 'sessions' %><br>
        <%= link_to "=>こちらからログインしてください", new_session_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
  <div class="col-xs-2 col-md-4"></div>
</div>