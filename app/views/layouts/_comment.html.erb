<% comments.each do |comment| %>
<div class="post-comment-main">
  <p style="font-weight: bold; font-size:20px;">
    <% if comment.user.id != 2 %>
      名前：<span class="comment-name"><%= link_to comment.user.name, user_path(comment.user) %></span>
    <% else %>
      名前：<span class="comment-name"><%= comment.user.name %></span>
    <% end %>
    投稿日：<%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
    <% if user_signed_in? %>
      <% if comment.user.id == current_user.id  || current_user.admin? %>
        <%= link_to "削除", comment_path(comment), class: "btn btn-danger", :method => :delete, data: { confirm: 'コメントを削除しますか？' }, remote: true %>
      <% end %>
    <% end %><br>
    <%= comment.title %>
  </p>
  <div style="font-size:18px;"><%= simple_format(h(comment.body)) %></div>
</div>
<% end %>