<% if user_signed_in? %>
  <% if diary.favorited_by?(current_user) %>
    <%= link_to diary_favorites_path(diary), method: :delete, remote: true do %>
      <i class="fa fa-heart favorite" aria-hidden="true"><%= diary.favorites.count %></i>
    <% end %>
  <% else %>
    <%= link_to diary_favorites_path(diary), method: :post, remote: true do %>
      <i class="far fa-heart favorite" aria-hidden="true"><%= diary.favorites.count %></i>
    <% end %>
  <% end %>
<% end %>