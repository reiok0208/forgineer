<div class="row">
  <div class="col-xs-8 col-xs-offset-1">
    <h1>新着日記</h1>
    <div class="diary-box-main">
      <% @diaries.each do |diary| %>
      <div class="diary-box-sub">
        <div class="row">
          <div class="col-xs-3">
            <div class="diary-box-image">
              <%= link_to (attachment_image_tag diary, :diary_image, :fill, 300, 180, format: 'png', fallback: "no-image.png", size:'300x180', class:"index-diary-image"),diary_path(diary)  %>
            </div>
          </div>
          <div class="col-xs-9">
            <div class="diary-box-text">
              <h3><%= link_to diary.title, diary_path(diary) %></h3>
              <p><%= diary.body%></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
      <div style="text-align: center;">
        <%= paginate @diaries %>
      </div>
    </div>
  </div>
  <div class="col-xs-2">
    <h3>日記検索</h3>
      <%= form_tag(diaries_path, method: :get) do %>
        <%= text_field_tag :search,"", class: "form-control", style: "width:250px; margin:10px 0;" %>
        <%= submit_tag '検索', :title => nil, class: "form-control", style: "margin-left:150px; width:100px;" %>
      <% end %>
    <div class="diary-tag-main">
      <h3 class="diary-tag-h3">タグ一覧</h3>
      <ul>
        <li class="tag-link"><%= link_to "全てのタグ", diaries_path %></li>
        <% @tags.each do |tag| %>
        <li class="tag-link"><%= link_to "#{tag.name}（#{tag.diaries.count}）", diaries_path(tag_id: tag.id) %></li>
        <% end %>
      </ul>
    </div>
    <div class="diary-rank-main">
      <h3 class="diary-tag-h3">日記ランキング</h3>
      <ul>
        <% i = 1 %>
        <% @most_viewed.each do |pv| %>
        <% if i == 10 %>
        <li class="tag-link" style="margin:10px 0 10px 2px;"><%= "#{i}. " %><%= link_to pv.title, diary_path(pv) %></li>
        <% else %>
        <li class="tag-link" style="margin:10px 0 10px 13px;"><%= "#{i}. " %><%= link_to pv.title, diary_path(pv) %></li>
        <% i += 1 %>
        <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="col-xs-1"></div>
</div>