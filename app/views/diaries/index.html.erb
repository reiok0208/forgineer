<div class="row">
  <div class="col-xs-7 col-xs-offset-1">
    <% if params[:search].present? %>
      <h2><%= "検索結果：#{params[:search]}" %></h2>
    <% else %>
      <h2>新着日記</h2>
    <% end %>
    <div class="diary-box-main">
      <% @diaries.each do |diary| %>
        <div class="diary_<%= diary.id %>">
          <%= render "layouts/diary_index", diary: diary %>
        </div>
      <% end %>
      <div style="text-align: center;">
        <%= paginate @diaries %>
      </div>
    </div>
  </div>

  <% if user_signed_in? %>
    <%= render "layouts/diary_index_side", tags: @tags, most_viewed: @most_viewed %>
  <% else %>
    <div class="col-xs-2 diary-side-box-main" style="height:1000px;">検索機能や日記ランキングは会員限定機能です</div>
  <% end %>
</div>